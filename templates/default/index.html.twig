{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>Bienvenue sur Todo List !</h1>
{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="row">
            <a href="{{ path('task_create') }}" class="btn btn-success">Créer une nouvelle tâche</a>
            <a href="{{ path('task_list') }}" class="btn btn-info">Consulter la liste des tâches à faire</a>
            <a href="{{ path('task_list') }}" class="btn btn-warning">Consulter la liste des tâches terminées</a>
        </div>
    {% endif %}
{% endblock %}
